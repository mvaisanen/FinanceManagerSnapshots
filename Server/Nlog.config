<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="console" xsi:type="Console" layout="[${logger}] [${level:uppercase=true}] : ${message}"/>
    <target name="file" xsi:type="File" fileName="logs\log-${shortdate}.txt" layout="${time}|[${logger}] [${level:uppercase=true}] : ${message}${exception:format=Message,StackTrace}"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="console,file"/>
  </rules>
</nlog>